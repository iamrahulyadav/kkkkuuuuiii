<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:endColor="#ee4f2a"
                android:startColor="#ee6f2a"
                android:type="linear" />

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:endColor="#ee4f2a"
                android:startColor="#ee6f2a"
                android:type="linear" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#ee782a"
                android:startColor="#ee8b2a"
                android:type="linear" />
        </shape>
    </item>



    <item android:state_pressed="false">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:endColor="#ee4f2a"
                android:startColor="#ee6f2a"
                android:type="linear" />


        </shape>
    </item>


</selector>