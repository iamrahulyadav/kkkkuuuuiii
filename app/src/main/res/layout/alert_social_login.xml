<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Please login with facebook or google plus to withdraw your credit"
        android:textColor="@color/color_white"
        android:textSize="18dp" />


    <LinearLayout
        android:id="@+id/socialBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/gplus"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_left_cornered_googleplus"
            android:gravity="center"
            android:onClick="onClick"
            android:text="g+  login"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_right_cornered_facebook"
            android:gravity="center"
            android:onClick="onClick"
            android:text="f   login"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>